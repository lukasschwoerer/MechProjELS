#:kivy 2.0
WindowManager:
    Startseite:
    MetrischeGewinde:
    ZollGewinde:
    SpezialGewinde:
    SchnittdatenRechner:
    Einstellungen:

<Startseite>
    name: "startseite"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        GridLayout:
            cols:6
            size_hint: 1, .1

            Button:
                text: "Startseite"
                halign: "center"

            Button:
                text: "Metrische\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "metrische"
                    root.manager.transition.direction = "left"
                    

            Button:
                text: "Zoll\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "zoll"
                    root.manager.transition.direction = "left"

            Button:
                text: "Spezial\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "spezial"
                    root.manager.transition.direction = "left"

            Button:
                text: "Schnittdaten\nRechner"
                halign: "center"
                on_release:
                    app.root.current = "rechner"
                    root.manager.transition.direction = "left"

            Button:
                text: "Einstellungen"
                halign: "center"
                on_release:
                    app.root.current = "einstellungen"
                    root.manager.transition.direction = "left"

        Label:
            text: "Section Startseite"
            size_hint: 1, .9

