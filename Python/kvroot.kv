#:kivy 2.0
WindowManager:
    Startseite:
    MetrischeGewinde:
    ZollGewinde:
    SpezialGewinde:
    SchnittdatenRechner:
    Einstellungen:


#: set LabelBackground 0.2, 0.2, 0.2, 1
#: set HeadingLabelBackground 0.34, 0.34, 0.34, 1
<Startseite>
    
    name: "startseite"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        GridLayout:
            cols:6
            size_hint: 1, .1

            Button:
                text: "Startseite"
                halign: "center"

            Button:
                text: "Metrische\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "metrische"
                    root.manager.transition.direction = "left"
                    

            Button:
                text: "Zoll\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "zoll"
                    root.manager.transition.direction = "left"

            Button:
                text: "Spezial\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "spezial"
                    root.manager.transition.direction = "left"

            Button:
                text: "Schnittdaten\nRechner"
                halign: "center"
                on_release:
                    app.root.current = "rechner"
                    root.manager.transition.direction = "left"

            Button:
                text: "Einstellungen"
                halign: "center"
                on_release:
                    app.root.current = "einstellungen"
                    root.manager.transition.direction = "left"

        BoxLayout:
            spacing: 5
            orientation: 'horizontal'

            BoxLayout:
                spacing: 3
                orientation:'vertical'
                
                Label:
                    text: ''
                    size_hint: 1, .2

                Label:
                    text: 'Spindel [rpm]'
                    font_size: '24dp'
                    size_hint: 1, .2
                    canvas.before:
                        Color:
                            rgba: HeadingLabelBackground
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    

                Label:
                    text: '1000'
                    font_size: '40dp'
                    canvas.before:
                        Color:
                            rgba: LabelBackground
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    
                Label:
                    text: ''
                    size_hint: 1, .2

                Label:
                    text: ''
                    size_hint: 1, .2




            BoxLayout:
                spacing: 3
                orientation: 'vertical'

                Label:
                    text: ''
                    size_hint: 1, .2

                GridLayout:
                    cols: 2
                    size_hint: 1, .2

                    Button:
                        text: 'Normal'

                    Button:
                        text: 'Gewinde'

                Label:
                    text: '0.90 mm/rev'
                    font_size: '40dp'
                    canvas.before:
                        Color:
                            rgba: LabelBackground
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    
                GridLayout:
                    cols: 2
                    size_hint: 1, .2

                    Button:
                        text: 'Zur√ºck'

                    Button:
                        text: 'Vor'

                Label:
                    text: ''
                    size_hint: 1, .2


