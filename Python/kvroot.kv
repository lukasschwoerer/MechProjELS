#:kivy 2.0
WindowManager:
    Startseite:
    MetrischeGewinde:
    ZollGewinde:
    SpezialGewinde:
    SchnittdatenRechner:
    Einstellungen:


#: set LabelBackground 0.2, 0.2, 0.2, 1
#: set HeadingLabelBackground 0.34, 0.34, 0.34, 1
#: set StandartSpacing 3

# ------------------ Design Macros ------------------ #
<Blank@Button>:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: [0, 0, 0, 0] if self.state == 'normal' else [0, 0, 0, 0]

        RoundedRectangle:
            size: self.size
            pos: self.pos

<Action@Button>:
    background_color: 0,0,0,0
    enabled: 0
    canvas.before:
        Color:
            rgba: [0.34, 0.34, 0.34, 1] if (self.enabled == 0 and self.state == 'normal') else [.2, .64, .8, 1]

        RoundedRectangle:
            size: self.size
            pos: self.pos

# ------------------ Design Macros ------------------ #


<Startseite>
    
    name: "startseite"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        GridLayout:
            cols:6
            size_hint: 1, .1

            Button:
                text: "Startseite"
                halign: "center"

            Button:
                text: "Metrische\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "metrische"
                    root.manager.transition.direction = "left"
                    

            Button:
                text: "Zoll\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "zoll"
                    root.manager.transition.direction = "left"

            Button:
                text: "Spezial\nGewinde"
                halign: "center"
                on_release:
                    app.root.current = "spezial"
                    root.manager.transition.direction = "left"

            Button:
                text: "Schnittdaten\nRechner"
                halign: "center"
                on_release:
                    app.root.current = "rechner"
                    root.manager.transition.direction = "left"

            Button:
                text: "Einstellungen"
                halign: "center"
                on_release:
                    app.root.current = "einstellungen"
                    root.manager.transition.direction = "left"

        BoxLayout:
            spacing: 5
            orientation: 'horizontal'

            BoxLayout:
                spacing: StandartSpacing
                orientation:'vertical'
                
                Label:
                    text: ''
                    size_hint: 1, .2

                Label:
                    text: 'Spindel [rpm]'
                    font_size: '24dp'
                    size_hint: 1, .2
                    canvas.before:
                        Color:
                            rgba: HeadingLabelBackground
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    

                Label:
                    id: rpm_lable
                    text: '0'
                    font_size: '40dp'
                    canvas.before:
                        Color:
                            rgba: LabelBackground
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    
                Label:
                    text: ''
                    size_hint: 1, .2

                Label:
                    text: ''
                    size_hint: 1, .2




            BoxLayout:
                spacing: 3
                orientation: 'vertical'

                Label:
                    text: ''
                    size_hint: 1, .2

                GridLayout:
                    cols: 2
                    size_hint: 1, .2
                    spacing: StandartSpacing

                    Action:
                        id: btn_normal
                        size_hint: 0.5, 1
                        text: 'Normal'
                        on_press: root.btn_normal()
                        enabled: 0
                        

                    Action:
                        id: btn_gewinde
                        size_hint: 0.5, 1
                        text: 'Metrisch'
                        on_press: root.btn_gewinde()
                        

                Label:
                    id: lable_feed
                    text: 'Disabled'
                    font_size: '40dp'
                    canvas.before:
                        Color:
                            rgba: LabelBackground
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    
                GridLayout:
                    cols: 2
                    size_hint: 1, .2
                    spacing: StandartSpacing

                    Action:
                        size_hint: 0.5, 1
                        text: '<'
                        bold: True
                        font_size: '40dp'
                        on_press: root.btn_prev()

                    Action:
                        size_hint: 0.5, 1
                        text: '>'
                        bold: True
                        font_size: '40dp'
                        on_press: root.btn_next()

                Label:
                    text: ''
                    size_hint: 1, .2


